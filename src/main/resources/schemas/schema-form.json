{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "blockList": {
            "type": "array",
            "title": "Block List",
            "description": "Block or exclude these fields from the final response",
            "items": {
                "type": "string",
                "title": "Field"
            }
        },
        "responsePolicy": {
            "title": "Response Policy",
            "description": "Response Policy",
            "type": "string",
            "default": "BLOCK_RESPONSE",
            "enum": ["BLOCK_RESPONSE", "REMOVE_BLOCKED_FIELDS"]
        }
    },
    "required": ["blockList", "responsePolicy"]
}
